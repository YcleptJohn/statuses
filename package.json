{
  "name": "statuses",
  "version": "1.0.0",
  "description": "A package to track statuses across multiple areas of technology",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "css-build": "node-sass --omit-source-map-url src/sass/all.scss dist/all.css",
    "css-watch": "npm run css-build -- --watch"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YcleptJohn/statuses.git"
  },
  "author": "github/YcleptJohn",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/YcleptJohn/statuses/issues"
  },
  "homepage": "https://github.com/YcleptJohn/statuses#readme",
  "dependencies": {
    "bulma": "^0.9.0",
    "moment": "^2.27.0",
    "node-fetch": "^2.6.0",
    "node-html-parser": "^1.2.20",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "require-all": "^3.0.0",
    "rss-parser": "^3.9.0"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "node-sass": "^4.14.1",
    "preact-cli": "^3.0.0",
    "sirv-cli": "1.0.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}

{
  "name": "statuses",
  "version": "1.0.0",
  "description": "A package to track statuses across multiple areas of technology",
  "scripts": {
    "build": "preact build --src src/ui",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --src src/ui",
    "lint": "eslint src",
    "test": "jest",
    "start": "node src/api/server.js"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YcleptJohn/statuses.git"
  },
  "author": "github/YcleptJohn",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/YcleptJohn/statuses/issues"
  },
  "homepage": "https://github.com/YcleptJohn/statuses#readme",
  "dependencies": {
    "@aduh95/preact-fontawesome": "0.1.5",
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-regular-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "bulma": "^0.9.0",
    "clipboard-polyfill": "^3.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.31",
    "node-fetch": "^2.6.0",
    "node-html-parser": "^1.2.20",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "require-all": "^3.0.0",
    "rss-parser": "^3.9.0",
    "sass-loader": "^10.0.1"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "node-sass": "^4.14.1",
    "preact-cli": "^3.0.0",
    "sirv-cli": "1.0.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
